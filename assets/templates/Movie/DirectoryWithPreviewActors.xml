<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
     <itemCollectionWithImageHeader id="com.sample.menu-items-with-sections">
    {{CUT(size:CUT:0=CUT|1=)}}
      <header>
	    <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=552|1080=828)}}, 0" required="true">
              {{URL(:/fanartcache/{{getBackground({{EVAL({\
              'title'       : "{{EVAL(quote_plus("{{VAL(title1:Plex Library)}}"))}}",\
              'subtitle'    : "{{EVAL(quote_plus("{{VAL(title2)}}"))}}",\
              'resolution'  : "{{VAL(^aTVScreenResolution)}}",\
              'layers'      : ["PlexSubList"]\
              })}})}})}}
	      </image>
	    </imageHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <!-- library directories -->
              <oneLineMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key:::PlexConnect=Movie_ByFolder)}}')"
                             onSelect="atv.loadURL('{{URL(key:::PlexConnect=Movie_ByFolder)}}')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <preview>
                  <link>{{URL(key:::X-Plex-Container-Start=0&amp;X-Plex-Container-Size=25&amp;PlexConnect=Main_SectionPreview)}}</link>{{CUT($actorview::Portrait=CUT|Movies=)}}
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>{{CUT($actorview::Movies=CUT|Portrait=)}}
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>

    <!--No Items Available-->
    <dialog id="com.sample.error-dialog">
    {{CUT(size::0=|1=CUT)}}
      <title>PlexConnect</title>
      <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
    </dialog>
  </body>
</atv>
